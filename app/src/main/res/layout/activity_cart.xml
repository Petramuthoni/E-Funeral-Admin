<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CartActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:id="@+id/r111"
        android:background="@color/colorPrimaryDark"
        android:layout_alignParentTop="true">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Total Price ="
            android:textSize="20dp"
            android:textColor="@android:color/white"
            android:textStyle="bold"
            android:id="@+id/total_price"
            android:textAlignment="center"
            android:layout_marginTop="10dp"/>


    </RelativeLayout>

    <android.support.v7.widget.RecyclerView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/cart_list"
        android:layout_below="@+id/r111"
        android:layout_above="@+id/next_process_button"
        ></android.support.v7.widget.RecyclerView>
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="15dp"
        android:background="@drawable/round_bg"
        android:layout_alignParentBottom="true"
        android:text="Order"
        android:layout_alignParentEnd="true"
        android:id="@+id/next_process_button"
        android:textColor="@android:color/white"
        android:textSize="20sp"
        android:textStyle="bold"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="15dp"
        android:background="@drawable/round_bg"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:text="Show Total Price"
        android:id="@+id/show_total_price"
        android:layout_toLeftOf="@+id/next_process_button"
        android:textColor="@android:color/white"
        android:textSize="20sp"
        android:textStyle="bold"/>
