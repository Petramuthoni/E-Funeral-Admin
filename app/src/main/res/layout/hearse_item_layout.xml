<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_margin="16dp"
    android:layout_marginStart="15dp"
    android:layout_marginLeft="16dp"
    android:layout_marginTop="20dp"
    android:layout_marginEnd="16dp"
    android:layout_marginRight="16dp"
    app:cardElevation="15dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"

        >

        <TextView
            android:id="@+id/Hearse_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Hearse Name"
            android:textAlignment="center"
            android:textColor="@color/colorPrimary"
            android:textSize="20dp"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/Hearse_image"
            android:layout_width="366dp"
            android:layout_height="199dp"
            android:layout_below="@+id/Hearse_name"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="7dp"
            android:scaleType="centerCrop" />

        <TextView
            android:id="@+id/Hearse_Description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/Hearse_image"
            android:text="Hearse Description"
            android:textAlignment="center"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="18dp" />


    </RelativeLayout>

</android.support.v7.widget.CardView>