<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AdminCheckHearsePaymentsActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/r7"
        android:orientation="vertical">

        <EditText
            android:id="@+id/inputserchinghearsepayment"
            android:layout_width="330dp"
            android:layout_height="52dp"
            android:layout_below="@+id/tvw"
            android:layout_margin="10dp"
            android:background="@drawable/round_border"
            android:drawableRight="@drawable/ic_search_black_24dp"
            android:hint="Search by hearse booking number"
            android:padding="9dp" />

        <android.support.v7.widget.RecyclerView
            android:id="@+id/recycler_hearsepayments_menu"
            android:layout_width="match_parent"
            android:layout_height="match_parent"

            android:layout_marginEnd="7dp"
            android:scrollbars="vertical">

        </android.support.v7.widget.RecyclerView>

    </LinearLayout>

</android.support.constraint.ConstraintLayout>