<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AdminCategoryActivity">
    <TextView
        android:layout_width="match_parent"
        android:id="@+id/slogan_category"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="27dp"
        android:text="Add New Producct"
        android:textAlignment="center"
        android:textSize="26sp"
        android:textStyle="bold"
        />

    <LinearLayout
        android:id="@+id/linear1_category_layout"
        android:layout_width="339dp"
        android:layout_height="120dp"
        android:layout_below="@+id/slogan_category"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="10dp"
        android:gravity="center"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/coffins"
            android:layout_width="155dp"
            android:layout_height="80dp"
            android:src="@drawable/coffin" />

        <ImageView
            android:id="@+id/flowers"
            android:layout_width="114dp"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/linear1_category_layout"
            android:src="@drawable/flower" />

        <ImageView
            android:id="@+id/cross"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/cross" />
    </LinearLayout>

        <LinearLayout
            android:id="@+id/linear2_category_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/linear1_category_layout"
            android:orientation="horizontal"
            android:layout_centerHorizontal="true"
            android:gravity="center"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="10dp">

            <ImageView
                android:id="@+id/perfume"
                android:layout_width="155dp"
                android:layout_height="80dp"
                android:src="@drawable/perfume"
                />

            <ImageView
                android:id="@+id/bodybag"
                android:layout_width="112dp"
                android:layout_height="80dp"
                android:layout_alignTop="@+id/linear2_category_layout"
                android:src="@drawable/bags" />
            <ImageView
                android:id="@+id/hearse"
                android:layout_width="155dp"
                android:layout_height="80dp"
                android:src="@drawable/hearse"
                />



        </LinearLayout>
    <Button
        android:id="@+id/maintain_btn"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_below="@+id/linear2_category_layout"
        android:layout_marginStart="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="50dp"
        android:layout_marginEnd="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginBottom="10dp"
        android:background="@drawable/round_bg"
        android:text="Maintain Products"
        android:textColor="@android:color/white"
        android:textSize="20dp"
        android:textStyle="bold" />
    <Button
        android:id="@+id/check_orders_btn"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_below="@+id/maintain_btn"
        android:layout_marginStart="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginBottom="10dp"
        android:background="@drawable/round_bg"
        android:text="Check Orders"
        android:textColor="@android:color/white"
        android:textSize="20dp"
        android:textStyle="bold" />
    <Button
        android:id="@+id/check_hearse_booking_btn"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_below="@+id/check_payments_btn"
        android:layout_marginStart="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginBottom="10dp"
        android:background="@drawable/round_bg"
        android:text="Check Hearse Bookings"
        android:textColor="@android:color/white"
        android:textSize="20dp"
        android:textStyle="bold" />
    <Button
        android:id="@+id/check_payments_btn"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_below="@+id/check_orders_btn"
        android:layout_marginStart="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginBottom="10dp"
        android:background="@drawable/round_bg"
        android:text="Check Payments"
        android:textColor="@android:color/white"
        android:textSize="20dp"
        android:textStyle="bold" />








</RelativeLayout>