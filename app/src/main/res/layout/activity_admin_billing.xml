        <EditText
            android:id="@+id/billingbereavednameET"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:hint="Enter Your Full Names eg John Doe"
            android:padding="16dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginBottom="16dp"
            android:background="@drawable/round_border"
            android:inputType="text" />

        <EditText
            android:id="@+id/billigbereavedphoneET"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:hint="Enter Your Phone Number"
            android:padding="16dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginBottom="16dp"
            android:background="@drawable/round_border"
            android:inputType="phone" />
        <EditText
        android:id="@+id/billingstartdateET"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp"
        android:enabled="false"
        android:focusable="false"
        android:textColor="@android:color/black"
        android:hint="startdate"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginBottom="16dp"
        android:background="@drawable/round_border"
         />
        <EditText
            android:id="@+id/billingevdadateET"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="16dp"
            android:hint="enddate"
            android:focusable="false"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginBottom="16dp"
            android:background="@drawable/round_border"
           />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Total Presevation Days ="
            android:id="@+id/biilingtotalpreservationdays"
            android:layout_marginStart="15dp"
            android:textColor="@android:color/black"
            android:layout_below="@+id/enddate_booking"/>



        <EditText
            android:id="@+id/billingtotalamountET"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="16dp"
            android:hint="Amount paid"
            android:textColor="@android:color/black"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginBottom="16dp"
            android:background="@drawable/round_border"
            android:inputType="number" />
