<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ManagerOccupancyReport">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:id="@+id/r8"
        android:background="@color/colorPrimaryDark"
        android:layout_alignParentTop="true">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Funeral Home Admissions"
            android:textSize="20dp"
            android:id="@+id/managertvw"
            android:textColor="@android:color/white"
            android:textStyle="bold"
            android:textAlignment="center"
            android:layout_marginTop="10dp"/>




    </RelativeLayout>



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/r8"
        android:orientation="vertical">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/managershowvalue"
            android:text="occupied"
            android:layout_gravity="right"
            android:layout_marginRight="15dp"
            android:background="@drawable/round_bg"
            android:textColor="@android:color/white"
            android:layout_marginTop="10dp"
            android:textSize="20dp"
            android:textStyle="bold"/>



        <EditText
            android:id="@+id/managerinputserching"
            android:layout_width="330dp"
            android:layout_height="52dp"
            android:layout_below="@+id/tvw"
            android:layout_margin="10dp"
            android:background="@drawable/round_border"
            android:drawableRight="@drawable/ic_search_black_24dp"
            android:hint="Search by mortician"
            android:padding="9dp" />

        <android.support.v7.widget.RecyclerView
            android:id="@+id/recycler_managerfuneralrequest_menu"
            android:layout_width="match_parent"
            android:layout_height="match_parent"

            android:layout_marginEnd="7dp"
            android:scrollbars="vertical">

        </android.support.v7.widget.RecyclerView>

    </LinearLayout>

</RelativeLayout>